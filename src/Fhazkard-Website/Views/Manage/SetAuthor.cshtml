@model SetAuthorViewModel
@{
    ViewData["Title"] = "Change Username";
}

<p class="text-info">
    You can change a local Author Name for this site.
</p>

<form asp-controller="Manage" asp-action="SetAuthor" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Change Username</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SetAuthor" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="SetAuthor" class="form-control" />
            <span asp-validation-for="SetAuthor" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Change</button>
        </div>
    </div>
    <a asp-action="index">Back</a>
    <hr>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
